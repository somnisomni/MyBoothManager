    "eslint": "^9.18.0",
    "execa": "^9.5.2",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "tsc-alias": "^1.8.10"
  },
  "dependencies": {
    "currency-symbol-map": "^5.1.0",
    "dompurify": "^3.2.3",
    "marked": "^15.0.6"
  }
