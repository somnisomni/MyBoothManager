{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": false,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "experimentalDecorators": true
  },
  "ts-node": { "files": true }
}
