{
  "extends": "./tsconfig.json",
  "include": ["./src/**/*.ts", "./scripts/**/*"],
  "exclude": ["node_modules", "tests", "dist/", "**/*spec.ts", "**/__tests__/**"],
  "compilerOptions": {
    "composite": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": false,
    "sourceMap": false,
    "allowJs": true
  }
}
